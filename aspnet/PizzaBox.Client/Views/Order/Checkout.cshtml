@model PizzaBox.Client.Models.OrderViewModel

<div>
  @if(@Model.Pizzas != null)
  {
    @foreach (var item in @Model.Pizzas)
    { <Label>@item.Name</Label>
      <label>Price: </label>
      <label>@item.Price</label>
      <br>
    }
  }
</div>
<div>
  <a href="/pizza/create" class="btn btn-lg btn-success" role="button">Create Pizza</a>
  <br>
  <br>
</div>
<div>
  <form action="/order/checkout" method="post">
  @Html.AntiForgeryToken()
  <div>
    <select asp-for="@Model.Store">
    @foreach (var item in @Model.Stores)
    {
      <option value="@item.Name">@item.Name</option>
    }
    </select>
  <br>
  <br>
  </div>
  <div>
    <button type="submit" class="btn btn-secondary btn-info">Checkout</button>
  </div>

  </form>
</div>
